<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    style="@style/MatchParentStyle"
    tools:context=".Activities.LoginActivity">

    <LinearLayout
        style="@style/MatchParentStyle.LinearVerticalStyle">

        <ScrollView
            android:id="@+id/login_form"
            style="@style/MatchParentStyle.LoginScrollview">

            <LinearLayout
                android:id="@+id/email_login_form"
                style="@style/MatchWrapStyle.LinearVerticalStyle.Padding.Land">

                <LinearLayout
                    style="@style/MatchWrapStyle.LinearHorizontalStyle">

                    <ImageView
                        android:id="@+id/imageView"
                        style="@style/MatchParentStyle.NapaLogo"/>

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/MatchParentStyle.NapaName"/>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayout"
                    app:boxBackgroundColor="@color/inputTextColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/username_text_input"
                        style="@style/MatchWrapStyle.TextInputEdit"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayout.Password"
                    app:boxBackgroundColor="@color/inputTextColor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password_text_input"
                        style="@style/TextInputLayout.Password"/>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/email_sign_in_button"
                    style="@style/MatchWrapStyle.SignButtonStyle"/>


                <LinearLayout
                    style="@style/WrapMatchStyle.LinearHorizontalStyle.ForgotPasswordStyle">

                    <TextView
                        style="@style/Transparent_Text.ForgotAccount"/>

                    <TextView
                        android:id="@+id/forgot_password_text"
                        style="@style/Bold_Text.Signing"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/MatchParentStyle.LinearHorizontalStyle.OrDivision">

                    <LinearLayout
                        style="@style/LineDivisionStyle"/>

                    <TextView
                        style="@style/MatchWrapStyle.ORText" />

                    <LinearLayout
                        style="@style/LineDivisionStyle"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/MatchParentStyle.LinearVerticalStyle.SocialButtons">

                    <Button
                        style="@style/MatchWrapStyle.SocialButtons.Google"/>

                    <Button
                        style="@style/MatchWrapStyle.SocialButtons.Facebook"/>

                    <Button
                        style="@style/MatchWrapStyle.SocialButtons.Twitter"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/SignUpLabel_Linear">

                    <TextView
                        style="@style/Transparent_Text.DontAccount"/>

                    <TextView
                        android:id="@+id/sign_up_button"
                        style="@style/Bold_Text.SignUp"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading_spinner"
        style="@style/ProgressBar"/>

</RelativeLayout>
