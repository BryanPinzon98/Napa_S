    <style name="MatchWrapStyle.SocialButtons.Facebook">
        <item name="android:background">@color/facebook_button_color</item>
        <item name="android:drawableLeft">@drawable/com_facebook_button_login_logo</item>
        <item name="android:text">Facebook</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MatchWrapStyle.SocialButtons.Facebook.tablet">
        <item name="android:layout_height">70dp</item>
